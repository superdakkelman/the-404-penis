<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- This ImageView sits behind the header and provides the background picture. -->
    <!-- It is constrained to the header's dimensions. -->
    <ImageView
        android:id="@+id/headerBackgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/badges_headerpic"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <!-- This is your original header, but with a translucent background. -->
    <!-- The green color now overlays the ImageView behind it. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/cleanupGreenTranslucent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Cleanup Badges"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Search Box -->
        <FrameLayout
            android:id="@+id/searchContainer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/search_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerTitle">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|start"
                android:layout_marginStart="16dp"
                android:contentDescription="Search icon"
                android:src="@drawable/ic_search" />

            <TextView
                android:id="@+id/searchLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="48dp"
                android:text="Search"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Badge Feed starts directly below the header. -->
    <!-- It scrolls over the main white background. -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- EcoStarter -->
            <ImageView
                android:id="@+id/ecostarter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_clean1"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="8dp"
                android:contentDescription="EcoStarter Badge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 pts."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/cleanupGreen"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoStarter"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joined 1 cleanup drive in eco-zones like Burnham Park."
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp" />

            <!-- EcoHelper -->
            <ImageView
                android:id="@+id/ecostarter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_clean2"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="8dp"
                android:contentDescription="EcoStarter Badge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50 pts."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/cleanupGreen"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoHelper"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joined 5 cleanup drives across city neighborhoods."
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp" />

            <!-- EcoChampion -->
            <ImageView
                android:id="@+id/ecostarter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_clean3"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="8dp"
                android:contentDescription="EcoStarter Badge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 pts."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/cleanupGreen"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoChampion"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joined 10 cleanup drives to protect Baguioâ€™s environment."
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp" />

            <!-- EcoLegend -->
            <ImageView
                android:id="@+id/ecostarter"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/ic_clean4"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="8dp"
                android:contentDescription="EcoStarter Badge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250 pts."
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/cleanupGreen"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EcoLegend"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joined 20+ cleanup drives and inspired others to join."
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar remains at the bottom of the screen. -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/white"
        app:itemIconTint="@color/nav_item_black_tint"
        app:itemTextColor="@color/nav_item_black_tint"
        app:itemTextAppearanceActive="@style/BottomNav.Active"
        app:itemTextAppearanceInactive="@style/BottomNav.Inactive"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
